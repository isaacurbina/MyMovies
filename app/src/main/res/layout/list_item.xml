<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_poster"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/gallery_thumb"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_title"
                android:hint="@string/card_title_hint"
                android:background="#000000"
                android:textColor="#ffffff"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_vote_average"
                android:hint="@string/card_vote_average_hint"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_overview"
                android:layout_toRightOf="@+id/card_poster"
                android:hint="@string/card_overview_hint"
                android:layout_below="@+id/card_title"
                android:ellipsize="end"
                android:maxLines="3" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>